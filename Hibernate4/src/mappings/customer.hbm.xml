<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        <!-- From hibernate 1.1.3 -->
<hibernate-mapping>
	<class name="lti.pojo.Customer" table="cust">
		<id name="custId" column="cust_id">
			<generator class="increment" />
		</id>
		<property name="custName" column="cust_name" length="30"></property>
		<property name="creditLimit" column="cr_limit"></property>
	</class>
</hibernate-mapping>